<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tx_header"
        android:text="Option"
        android:fontFamily="sans-serif-black"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/im_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/im_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/image_button_click"
        app:layout_constraintLeft_toRightOf="@+id/tx_header"
        app:layout_constraintTop_toTopOf="@+id/tx_header"
        app:layout_constraintBottom_toBottomOf="@+id/tx_header"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/delete1" />

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#DDCFCFCF"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>