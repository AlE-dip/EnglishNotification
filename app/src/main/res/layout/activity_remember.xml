<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RememberActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ct_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/image_button_click"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tx_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Remember"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/im_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/im_back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_tag"
        android:background="#03A9F4"
        app:layout_constraintTop_toBottomOf="@id/ct_header_title"
        android:layout_marginTop="2dp"
        app:tabMode="scrollable"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ct_infor_chip"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tl_tag"
        app:layout_constraintBottom_toTopOf="@+id/fl_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_body_item_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tx_date_expand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:text="01-01-2000"
                    android:textAlignment="textEnd"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toRightOf="@id/tx_forget_expand"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tx_id_expand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="00"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@id/tx_date_expand"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tx_forget_expand"
                    app:layout_constraintTop_toTopOf="@id/tx_date_expand" />

                <TextView
                    android:id="@+id/tx_forget_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tx_id_expand"
                    app:layout_constraintLeft_toRightOf="@+id/tx_id_expand"
                    app:layout_constraintRight_toLeftOf="@+id/tx_date_expand"
                    app:layout_constraintTop_toTopOf="@+id/tx_id_expand" />

                <TextView
                    android:id="@+id/tx_english_expand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="english"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tx_vietnamese_expand"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tx_id_expand" />

                <TextView
                    android:id="@+id/tx_vietnamese_expand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:text="vietnamese"
                    android:textSize="20sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/tx_english_expand"
                    app:layout_constraintTop_toBottomOf="@id/tx_english_expand" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ct_body_item_expand">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ct_body_item_expand_related"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/im_item_related_expand"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/related"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rc_item_related_expand"
                        app:layout_constraintLeft_toRightOf="@+id/im_item_related_expand"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/im_item_related_expand"
                        app:layout_constraintBottom_toBottomOf="@+id/im_item_related_expand"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ct_body_item_expand_synonym"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/ct_body_item_expand_related">

                    <ImageView
                        android:id="@+id/im_item_synonym_expand"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/synonym"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rc_item_synonym_expand"
                        app:layout_constraintLeft_toRightOf="@+id/im_item_synonym_expand"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/im_item_synonym_expand"
                        app:layout_constraintBottom_toBottomOf="@+id/im_item_synonym_expand"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ct_body_item_expand_antonym"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/ct_body_item_expand_synonym">

                    <ImageView
                        android:id="@+id/im_item_antonym_expand"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/antonym"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rc_item_antonym_expand"
                        app:layout_constraintLeft_toRightOf="@+id/im_item_antonym_expand"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/im_item_antonym_expand"
                        app:layout_constraintBottom_toBottomOf="@+id/im_item_antonym_expand"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            app:layout_constraintTop_toBottomOf="@id/ct_relation"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fl_page"
        app:layout_constraintTop_toBottomOf="@+id/ct_infor_chip"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>