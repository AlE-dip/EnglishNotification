<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ct_item_search"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:background="#9FCDCDCD"
        app:layout_constraintBottom_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tx_search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/im_check"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="word"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/im_check"
        android:src="@drawable/check"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tx_search"
        app:layout_constraintBottom_toBottomOf="@+id/tx_search"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toRightOf="@id/tx_search"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>